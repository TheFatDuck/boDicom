<Window x:Class="boDicom.WPF.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boDicom.WPF"
        mc:Ignorable="d"
        Title="About" Height="200" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="LogoImage" Grid.Column="0" Margin="10, 25, 10, 25"/>
        <Grid Grid.Column="1" Margin="5, 25, 5, 25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="boDicom" FontSize="20" FontWeight="Bold" Margin="0, 0, 0, 5"/>
            <TextBlock Grid.Row="1" Text="Ver 1.0.0.0" FontSize="12" Margin="0, 0, 0, 5"/>
            <TextBlock Grid.Row="2" FontSize="12">
                <Hyperlink NavigateUri = "https://github.com/TheFatDuck/boDicom"> https://github.com/TheFatDuck/boDicom</Hyperlink>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
